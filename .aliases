# EASIER NAVIAGTION
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# PROGRAMS

# OSX Specific MYSQLD
alias osxmysql='sudo /usr/local/mysql/support-files/mysql.server'

alias mysqlstart='sudo /usr/local/mysql/support-files/mysql.server start'
alias mysqlstop='sudo /usr/local/mysql/support-files/mysql.server stop'

# EDIT HOSTS
alias hosts='sudo $EDITOR /etc/hosts'   # yes I occasionally 127.0.0.1 twitter.com ;)

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
        colorflag="--color"
else # OS X `ls`
        colorflag="-G"
fi

# LS ALIASES
alias l="ls -l ${colorflag}"
alias la="ls -la ${colorflag}"
alias lsd='ls -l | grep "^d"'

# PHP SERVER
alias phps="php -s localhost:8000"

# Flush Directory Service cache
alias flush="dscacheutil -flushcache && killall -HUP mDNSResponder"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# Be nice
alias please="sudo"

# Compass aliases
alias compw="compass watch"
alias compc="compass compile --force"

# Reload configurations
if [ -n "$ZSH_VERSION" ]; then
  alias reload="source ~/.zshrc"
elif [ -n "$BASH_VERSION" ]; then
  alias reload="source ~/.bash_profile"
fi

# Running Stream aliases
alias stream-local="ENVIRONMENT=development_local python manage.py"
alias stream-remote="ENVIRONMENT=development python manage.py"
alias stream-testing="ENVIRONMENT=testing python manage.py"

# Killing Django Dev Server(s)
alias kill-django="ps | grep \"python manage.py runserver\" | grep -v \"grep\" | awk '{ print $1 }' | xargs kill"
